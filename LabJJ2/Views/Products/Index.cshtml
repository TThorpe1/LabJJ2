
@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>


@model LabJJ2.Models.ProductsModel


    <div class="container">
        <div class="row">
            
            @using (Html.BeginForm("Index", "Products", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.Name)
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter name" })
                    @Html.ValidationMessageFor(x => x.Name, "Please enter a valid name.", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Description)
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Enter description" })
                    @Html.ValidationMessageFor(x => x.Description, "Please enter a valid decsription.", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Price)
                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control", placeholder = "Enter price" })
                    @Html.ValidationMessageFor(x => x.Price, "Please enter a valid price.", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.CustomerRating)
                    @Html.TextBoxFor(x => x.CustomerRating, new { @class = "form-control", placeholder = "Enter rating" })
                </div>                
            
            <button type = "submit" class="btn-success">Submit</button>
            }
        </div>  
    </div>
    
         @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
      }

